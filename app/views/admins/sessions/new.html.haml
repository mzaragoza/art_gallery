= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .bootstrap-admin-login-form
    %h1 Login
    = f.error_notification
    .form-group
      = f.input :email, label: false, input_html: { class: 'form-control', placeholder: "E-Mail" }
    .form-group
      = f.input :password, label: false, input_html: { class: 'form-control', placeholder: "Password" }
    %button.btn.btn-lg.btn-primary{:type => "submit"} Submit
    = link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-lg btn-danger'
